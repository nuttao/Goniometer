<div class="row">
  <div class="col-sm-12">
    <%= form_for(@measure, html: {class: "form-horizontal bootstrap-validator-form"}) do |f| %>
      <div class="panel panel-success panel-square">
        
        <div class="panel-heading">
          <h3 class="panel-title">Show Data</h3>
        </div>
        
        <div class="panel-body">
          <%= input_text_field :measure, :user, class: "form-control", disabled: true %>
          <%= input_text_field :measure, :patient, class: "form-control", disabled: true %>
          <%= input_text_field :measure, :body_part, class: "form-control", disabled: true %>
          <%= input_text_field :measure, :motion, class: "form-control", disabled: true %>
          <%= input_text_field :measure, :measure_mode, class: "form-control", disabled: true %>
          <%= input_text_area :measure, :description, class: "form-control", disabled: true %>
          <%= input_text_field :measure, :measured_at, class: "form-control", disabled: true %>
        </div>

        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-offset-3 col-sm-9">
              <div class="btn-toolbar " role="toolbar">
                <div class="btn-group">
                  <%= link_to edit_measure_path(@measure), class: "btn btn-warning" do %>
                    <i class="fa fa-pencil-square-o"></i> Edit
                  <% end %>
                </div>
                <div class="btn-group">
                  <%= link_to "javascript: ;", class: "btn btn-danger", method: "delete", id: "delete" do %>
                    <i class="fa fa-ban"></i> Delete
                  <% end %>
                </div>
                <div class="btn-group">
                  <%= link_to measures_path(), class: "btn btn-default" do %>
                    <i class="fa  fa-arrow-left"></i> Back
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $(document).on("click", "#delete", function(e) { 
    e.preventDefault();       
    bootbox.dialog({
      message: "Are you sure ?",
      title: "Confirmation",
      buttons: {
        cancel: {
          label: "Cancel",
          className: "btn-default",
          callback: function() {
            // Todo
          }
        },
        ok: {
          label: "OK",
          className: "btn-danger",
          callback: function() {
            // Todo
            
            window.location = '<%= measures_path %>';

          }
        },
      }
    }).find("div.modal-content").addClass("modal-no-shadow modal-no-border bg-danger");;
  });
</script>










