<h1>Listing instructions</h1>

<table>
  <thead>
    <tr>
      <th>Motion</th>
      <th>Description</th>
      <th>Axis mode</th>
      <th>Order no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.motion %></td>
        <td><%= instruction.description %></td>
        <td><%= instruction.axis_mode %></td>
        <td><%= instruction.order_no %></td>
        <td><%= link_to 'Show', instruction %></td>
        <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
        <td><%= link_to 'Destroy', instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instruction', new_instruction_path %>
