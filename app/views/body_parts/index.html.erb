<div class="row">
  <div class="col-sm-12">
      <div class="panel panel-info panel-block-color panel-square">
        <div class="panel-heading">
          <h3 class="panel-title">Body parts</h3>
          <div class="right-content">
            <div class="btn-group">
              <%= link_to new_body_part_path, class: "btn btn-warning" do %>
                <i class="fa fa-plus"></i> Add new body part
              <% end %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="box">
            <div class="table-responsive">
              <table class="table table-striped table-hover" id="main-datatable">
                <thead class="the-box dark full">
                  <tr>
                    <th>Image</th>                 
                    <th>Name</th>
                  </tr>
                </thead>
                <tbody>
                  <% (@body_parts).each do |body_part| %>
                    <tr>
                      <td><%= link_to image_tag(body_part.image.url), body_part_path(body_part), class: "thumbnail square col-sm-3" %></td>  
                      <td><%=  body_part.name  %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div><!-- /.table-responsive -->
          </div>
        </div><!-- /.panel-body -->        
      </div><!-- /.panel panel-info -->
  </div><!-- /.col-sm-4 -->
</div>
<script>
  $(document).ready(function(){
      $('#main-datatable').dataTable();
  });
</script>