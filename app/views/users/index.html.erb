<div class="row">
  <div class="col-sm-12">
      <div class="panel panel-info panel-block-color panel-square">
        <div class="panel-heading">
          <h3 class="panel-title">Users</h3>
          <div class="right-content">
            <div class="btn-group">
              <%= link_to new_user_path, class: "btn btn-warning" do %>
                <i class="fa fa-plus"></i> Add new user
              <% end %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="box">
            <div class="table-responsive">
              <table class="table table-striped table-hover" id="main-datatable">
                <thead class="the-box dark full">
                  <tr>
                    <th>Image</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>                  
                  </tr>
                </thead>
                <tbody>
                  <% (@users).each do |user| %>
                    <tr>
                      <td>
                        <% if user.image.present? %>
                          <%= link_to image_tag(user.image.url), user_path(user), class: "thumbnail square col-sm-3" %>
                        <% else %>
                          <img alt="Avatar" class="thumbnail square col-sm-3" src="/template/assets/img/avatar/avatar.jpg", style="width: 100px; height: 100px;">
                        <% end %>
                      </td> 
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><%= user.role %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div><!-- /.table-responsive -->
          </div>
        </div><!-- /.panel-body -->        
      </div><!-- /.panel panel-info -->
  </div><!-- /.col-sm-4 -->
</div>
<script>
  $(document).ready(function(){
      $('#main-datatable').dataTable();
  });
</script>