<%= form_for(@profile, url: {controller: "profile", action: "update", id: @profile.id}, html: {class: "form-horizontal bootstrap-validator-form", id: 'main-form', multipart: true, method: :post}) do |f| %>

	<%= input_image_file_field :profile, :image, readonly: true, class: "form-control" %>
	<%= input_text_field_required :profile, :username, class: "form-control" %>
	<%= input_password_field_required :profile, :password, class: "form-control" %>
	<%= input_password_field_required :profile, :password_confirmation, class: "form-control" %>
	<%= input_text_field :profile, :email, class: "form-control" %>
	
  	<div class="row">
    	<div class="col-sm-offset-3 col-sm-9">
      		<div class="btn-toolbar " role="toolbar">
	        	<div class="btn-group">
	          		<%= link_to "javascript:;", class: "btn btn-primary", id: 'submit' do %>
	            		<i class="fa fa-check"></i> Save
	          		<% end %>
	        	</div>
	        	<div class="btn-group">
	          		<%= link_to({action: "detail", id: @profile.id}, class: "btn btn-default", remote: true) do %>
	            		<i class="fa fa-times"></i> Cancel
	          		<% end %>
        		</div>
	      	</div>
	    </div>
  	</div>
<% end %>
